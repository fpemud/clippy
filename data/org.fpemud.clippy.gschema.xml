<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.fpemud.clippy" path="/org/fpemud/clippy/">
    <key name="agent" type="s">
      <default>"Clippy"</default>
      <summary>Agent Name</summary>
      <description>Which agent to use</description>
    </key>
    <key name="background-color" type="s">
      <default>"#ffffff"</default>
      <summary>Background Color</summary>
      <description>Background color if alpha display is not supported</description>
    </key>
    <key name="native-resolution" type="b">
      <default>true</default>
      <summary>Use native resolution</summary>
      <description>Use native resolution of agent</description>
    </key>
    <key name="x-resolution" type="i">
      <default>400</default>
      <summary>Agent Width</summary>
      <description>The width of the agent, in pixels</description>
    </key>
    <key name="y-resolution" type="i">
      <default>400</default>
      <summary>Agent Height</summary>
      <description>The height of the agent, in pixels</description>
    </key>
  </schema>
</schemalist>
